<% if (collection.pageInfo().pages > 1) { %>
  <div class="pagination">
    <ul>
    
    <li><a class="go-to-page" href="#" data-page="1"><i class="icon-fast-backward"></i></a></li>
      <% if (collection.pageInfo().prev) { %>
        <li><a class="prev-page" href="#"><i class="icon-backward"></i></a></li>
      <% } else { %>
        <li class="disabled"><a class="prev-page" href="#"><i class="icon-backward"></i></a></li>
      <% } %>
      
      <% var start = collection.pageInfo().page - 4 ;
          if(start <= 0){
          start = 1;
          }
         var end = start + 9;
         if(end > collection.pageInfo().pages){
         end = collection.pageInfo().pages;
         }
         for (var i=start; i<= end; i++) { %> 
        <% if (i == collection.pageInfo().page) { %>
          <li class="active"><a class="go-to-page" href="#" data-page="<%= i %>"><%= i %></a></li>
        <% } else { %>
          <li><a class="go-to-page" href="#" data-page="<%= i %>"><%= i %></a></li>
        <% } %>
      <% } %>
      <% if (collection.pageInfo().next) { %>
        <li><a class="next-page" href="#"><i class="icon-forward"></i></a></li>
      <% } else { %>
        <li class="disabled"><a class="next-page" href="#"><i class="icon-forward"></i></a></li>
      <% } %>
      <li><a class="go-to-page" href="#" data-page="<%= collection.pageInfo().pages%>"><i class="icon-fast-forward"></i></a></li>
    </ul>
  </div>
<% } %>

