<h3>Samba</h3>

<% if (!_.isUndefined(smbShare.id)) { %>
  <table id="smb-shares-table" summary="SMB Share">
    <tbody id="smb-shares-table-body">
      <tr>
        <td>Browsable: </td><td><%= smbShare.get("browsable") %></td>
      </tr>
      <tr>
        <td>Guest ok: </td><td><%= smbShare.get('guest_ok') %></td>
      </tr>
      <tr>
        <td>Read only: </td><td><%= smbShare.get('read_only') %></td>
      </tr>
      <tr>
        <td>Comments: </td><td><%= smbShare.get('comment') %></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  No smb share created 
  <br/>
  <br/>
<% } %>
<div class="clear"></div>
<% if (_.isUndefined(smbShare.id)) { %>
  <a class="btn btn-primary" href="#" id="add-smb-share"><i class="icon-edit icon-white"></i> Create SMB Share</a>
<% } else { %>
  <a class="btn btn-danger" href="#" id="delete-smb-share"><i class="icon-trash icon-white"></i> Delete SMB Share</a>
<% } %>

<div class="simple-overlay" id="smb-export-form">
  <div class="overlay-content">
    <div class="row-fluid">
      <div class="span12">
        <div id="smb-export-ph"></div>

      </div> <!-- span12 -->
    </div> <!-- row-fluid -->

  </div> <!-- overlay-content -->
</div>
