<% if (collection.pageInfo().pages > 1) { %>
 
<nav>
   <% var entries = (collection.pageInfo().page)*collection.pageSize ; 
   if(collection.pageInfo().page*collection.pageSize > collection.pageInfo().count){
   entries = collection.pageInfo().count;
   }
   %>
    <p><i>Displaying entries <%= (collection.pageInfo().page-1)*collection.pageSize+1 %>  -  <%= entries %>  of  <%= collection.pageInfo().count %></i></p>
    <ul class="pagination">
    
    <li><a class="go-to-page" href="#" data-page="1"><i class="glyphicon glyphicon-fast-backward"></i></a></li>
      <% if (collection.pageInfo().prev) { %>
        <li><a class="prev-page" href="#"><i class="glyphicon glyphicon-backward"></i></a></li>
      <% } else { %>
        <li class="disabled"><a class="prev-page" href="#"><i class="glyphicon glyphicon-backward"></i></a></li>
      <% } %>
      
      <% var start = collection.pageInfo().page - 4 ;
          if(start <= 0){
          start = 1;
          }
         var end = start + 9;
         if(end > collection.pageInfo().pages){
         end = collection.pageInfo().pages;
         }
         for (var i=start; i<= end; i++) { %> 
        <% if (i == collection.pageInfo().page) { %>
          <li class="active"><a class="go-to-page" href="#" data-page="<%= i %>"><%= i %></a></li>
        <% } else { %>
          <li><a class="go-to-page" href="#" data-page="<%= i %>"><%= i %></a></li>
        <% } %>
      <% } %>
      <% if (collection.pageInfo().next) { %>
        <li><a class="next-page" href="#"><i class="glyphicon glyphicon-forward"></i></a></li>
      <% } else { %>
        <li class="disabled"><a class="next-page" href="#"><i class="glyphicon glyphicon-forward"></i></a></li>
      <% } %>
      <li><a class="go-to-page" href="#" data-page="<%= collection.pageInfo().pages%>"><i class="glyphicon glyphicon-fast-forward"></i></a></li>
    </ul>
</nav>
<% } %>

