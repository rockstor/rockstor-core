<h4>Resize Share</h4>
<div class="row">
	<div class="col-md-8">
		<div class="form-box">
			<div class="messages"></div>
				<label class="control-label" for="new-size">New Size</label>
			<form class="form-inline">
				<div class="form-group">
					<input class="smallinput form-control" type="text" name="new-size"
						id="new-size"
						value="<%= humanize.filesize(share.get('size')*1024).replace(/[^0-9\.]+/g,"") %>">
				</div>
				<div class="form-group">
					<select class="smallinput form-control" id="size_format"
						name="size_format">
						<option<%if(humanize.filesize(share.get('size')*1024).match(/Kb/g,"")){%>
							selected="selected"<%}%> >KB</option>
						<option<%if(humanize.filesize(share.get('size')*1024).match(/Mb/g,"")){%>
							selected="selected"<%}%> >MB</option>
						<option<%if(humanize.filesize(share.get('size')*1024).match(/Gb/g,"")){%>
							selected="selected"<%}%> >GB</option>
						<option<%if(humanize.filesize(share.get('size')*1024).match(/Tb/g,"")){%>
							selected="selected"<%}%> >TB</option>
					</select>
				</div>
			</form><br />
			<div class="form-group">
				<a class="btn btn-default" href="#" id="js-resize-cancel">
					Cancel</a> <a class="btn btn-primary" href="#" id="js-resize-save">
					Save</a>
			</div>
		</div>
	</div>
</div>


