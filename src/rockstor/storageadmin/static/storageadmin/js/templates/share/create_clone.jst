<div class="row">
  <div class="col-md-8">
<div class="panel panel-default">
<% if (sourceType == 'share') { %>
  <div class="panel-heading">Create clone from share <strong><%= shareName %></strong></div>
<% } else { %>
  <div class="panel-heading">Create clone from snapshot <strong><%= snapName %></strong> of share <strong><%= shareName %></strong></div>
<% } %>

    <div class="panel-body">
      <form class="form-horizontal" name="create-clone-form" id="create-clone-form">
        <div class="messages"></div>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="name">Clone Name<span class="required"> *</span></label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="name" id="name" title="Desired name of the Clone">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8 col-sm-offset-4">
            <a id="js-cancel" class="btn btn-default">Cancel</a>
            <input type="Submit" id="create-clone" class="btn btn-primary" value="Submit"></input>
          </div>
        </div>
      </form>
    </div><!--panel-body-->
  </div><!--panel-default-->
</div><!--col-md-8-->
</div><!--row-->
