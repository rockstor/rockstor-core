<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
<% if (groupname == null) { %>
<div class="panel-heading">Create a new group</div>
<%} else {%>
<div class="panel-heading">Edit Group</div>
<%}%>

    <div class="panel-body">
      <form class="form-horizontal" id="group-create-form" name="aform">
        <div class="messages"></div>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="groupname">Groupname
            <% if (groupname == null) { %>
            <span class="required"> *</span>
            <% } %>
          </label>
            <% if (groupname != null) { %>
            <label class="col-sm-4 control-label" style="text-align:left"><%=groupname%></label>
	    <div class="col-sm-4">
              <input class="form-control" type="hidden" id="groupname" name="groupname" value="<%=groupname%>">
	    </div>
            <% } else { %>
	    <div class="col-sm-4">
              <input class="form-control" type="text" id="groupname" name="groupname" placeholder="Groupname" title="Enter Group Name">
	    </div>
            <% } %>
        </div>
	<div class="form-group">
	  <div class="col-sm-offset-4 col-sm-8">
            <div class="checkbox">
              <label>
		<% if (group != null && group.get('admin')) { %>
		<input type="checkbox" id="admin" name="admin" placeholder="Admin" checked="true">
		<% } else { %>
		<input type="checkbox" id="admin" name="admin" placeholder="Admin">
		<% } %>
		Put this group under Rockstor management?
              </label>
            </div>
	  </div>
	</div>
	<div class="form-group">
	  <label class="col-sm-4 control-label">GID</label>
	    <div class="col-sm-4">
	      <input class="form-control" type="text" id="gid" name="gid" placeholder="Autogenerate" title="Enter a custom gid here or one will be autogenerated">
	    </div>
	</div>
        <div class="form-group">
	  <div class="col-sm-offset-4 col-sm-8">
            <button id="cancel" class="btn btn-default">Cancel</button>
            <button type="Submit" id="create-group" class="btn btn-primary">Submit</button>
	  </div>
        </div>
      </form>
    </div>
  </div>
</div>
