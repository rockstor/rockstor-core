<!-- Module Body -->
<div class="row">
  <div class="col-md-12">
    <div class="messages"></div>
    <!-- Content -->
    <h3> Rockstor managed users </h3>
    <table id="users-table" class="table table-condensed table-bordered table-hover table-striped share-table tablesorter" summary="List of user">
      <thead>
        <tr>
          <th scope="col" abbr="Name">Username</th>
	  <th scope="col" abbr="Admin">Admin access</th>
          <th scope="col" abbr="UID">UID</th>
          <th scope="col" abbr="Group">Group</th>
	  <th scope="col" abbr="Shell">Shell</th>
          <th scope="col" abbr="Actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.each(function(user, index) { %>
	<% if (user.get('admin')) { %>
           <tr>
	    <td><i class="glyphicon glyphicon-user"></i> <%= user.get("username") %></td>
	    <td>
	      <% if (user.get('user')) { %>
                Yes
              <% } else { %>
	        No
              <% } %>
            </td>
            <td><%= user.get('uid') %></td>
	    <td>
	      <% if (user.get('groupname')) { %>
	        <%= user.get('groupname') %>
	      <% } %>
	    <td><%= user.get('shell') %></td>
            <td>
              <a href="#" class="edit-user" data-username="<%= user.get('username') %>" rel="tooltip" title="Edit user"><i class="glyphicon glyphicon-pencil"></i></a>
              &nbsp;
              <a href="#" class="delete-user" data-username="<%= user.get('username') %>" rel="tooltip" title="Delete user"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
          </tr>
	  <% } %>
        <% }); %>
      </tbody>
    </table>
    <a href="#add-user" id="add-user" class="btn btn-primary">Add User</a>
    <div class="ph-pagination"></div>

    <h3> Other system users </h3>
    <table id="users-table" class="table table-condensed table-bordered table-hover table-striped share-table tablesorter" summary="List of user">
      <thead>
        <tr>
          <th scope="col" abbr="Name">Username</th>
          <th scope="col" abbr="UID">UID</th>
          <th scope="col" abbr="GID">GID</th>
          <th scope="col" abbr="Actions">Actions</th>
        </tr>
      </thead>
      <tbody>
	<% users.each(function(user, index) { %>
	<% if (!user.get('admin')) { %>
           <tr>
	    <td><i class="glyphicon glyphicon-user"></i> <%= user.get("username") %></td>
            <td><%= user.get("uid") %></td>
            <td><%= user.get("gid") %></td>
            <td>
              <a href="#" class="delete-user" data-username="<%= user.get('username') %>" rel="tooltip" title="Delete user"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
          </tr>
	  <% } %>
        <% }); %>
      </tbody>
      </table>
      <div class="ph-pagination"></div>

  </div> <!-- col-md-12 -->
</div> <!-- row -->
