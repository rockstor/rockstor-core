<div class="row">
<div class="col-md-8">
<div class="panel panel-default">
    <div class="panel-heading">
        {{#if afpShareIdNotNull}}
            Edit afp export
        {{else}}
            Add afp export
        {{/if}}
    </div>
    <div class="panel-body">
      <form id="add-afp-share-form" name="aform" class="form-horizontal">
        <div class="messages"></div>

        <!-- Shares -->
        <div class="form-group">
          <label class="col-sm-4 control-label" for="shares">Shares to export<span class="required">*</span></label>
          <div class="col-sm-4">
            <select class="form-control" name="shares" id="shares" size="10" class='required' data-placeholder="Select shares to export" multiple="multiple">
            {{display_shares_dropdown}}
            </select>
          </div>
        </div>

        <!-- Time Machine -->

        <div class="form-group">
          <label class="col-sm-4 control-label" for="time_machine">Time Machine<span class="required"> *</span></label>
          <div class="col-sm-8">
            {{display_timeMachine_choices}}
          </div>
        </div>

        <!-- Submit -->
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <a id="cancel" class="btn btn-default">Cancel</a>
            <input type="Submit" id="create-afp-share" class="btn btn-primary" value="Submit"></input>
          </div>
        </div>

      </form>
    </div><!--panel-body-->
</div><!--panel-default-->
  </div> <!--col-md-8 -->
</div>  <!-- row -->
