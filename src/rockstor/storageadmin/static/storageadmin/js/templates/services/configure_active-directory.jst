<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">

<div class="panel-heading">Configure <%= service.get('display_name') %></div>

  <div class="panel-body">
      <form class="form-horizontal" id="active-directory-form" name="aform">
        <div class="messages"></div>

        <!-- AD Domain/Realm name -->
        <div class="form-group">
          <label class="col-sm-4 control-label" for="domain">Domain/Realm Name<span class="required"> *</span></label>
          <div class="col-sm-4">
            <input class="form-control" type="text" id="domain" name="domain" value="<%= config.domain %>" placeholder="Domain" >
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-4 control-label" for="username">Administrator Username<span class="required"> *</span></label>
          <div class="col-sm-4">
            <input class="form-control" type="text" id="username" name="username" value="<%= config.username %>" placeholder="Administrator">
          </div>
        </div>

	<div class="form-group">
	  <label class="col-sm-4 control-label" for="password">Password<span class="required"> *</span></label>
	  <div class="col-sm-4">
	    <input class="form-control" type="password" id="password" name="password" placeholder="Password">
	  </div>
	</div>

        <!-- Submit -->
        <div class="form-group">
          <div class="col-sm-8 col-sm-offset-4">
            <button id="cancel" class="btn btn-default">Cancel</button>
            <button type="Submit" id="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

      </form>

    </div> <!-- panel-body -->
  </div><!--panel-default-->
  </div> <!-- col-md-8 -->
</div> <!-- row -->
