<h3>Configure <%= service.get('display_name') %></h3>

<div class="row">
  <div class="col-md-8">
    <label class="control-label"></label>
    <div class="form-box">
      <form id="nis-form" name="aform">
        <div class="messages"></div>
        <div class="form-group">
          <label class="control-label" for="domain">Domain<span class="required"> *</span></label>
          <div class="controls">
            <input class="form-control shorten-input" type="text" id="domain" name="domain" value="<%= config.domain %>" placeholder="Domain" title="NIS domain" >
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="server">Server<span class="required"> *</span></label>
          <div class="controls">
            <input class="form-control shorten-input" type="text" id="server" name="server" value="<%= config.server %>" placeholder="Server" title="Address of NIS server">
          </div>
        </div>
        <div class="form-group">
          <div class="controls">
            <button id="cancel" class="btn btn-default">Cancel</button>
            <button type="Submit" id="create-user" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </form>

    </div> <!-- form-box -->
  </div> <!-- col-md-8 -->
</div> <!-- row -->

